<?xml version="1.0"?>
<launch>
  <arg name="image_topic" default="image_rect" />

  <arg name="publish_detection_image" default="true" />

  <node pkg="apriltags2_ros" type="apriltags2_ros_continuous_node" name="turtlebot_apriltags2_detector">
    <!-- Remap topics from those used in code to those on the ROS network -->
    <remap from="image_rect"  to="camera/rgb/image_rect_color" />
    <remap from="camera_info" to="camera/rgb/camera_info" />

    <param name="camera_frame" type="str" value="camera_rgb_optical_frame" />
    <param name="publish_tag_detections_image" type="bool" value="$(arg publish_detection_image)" />

    <rosparam command="load" file="$(find tams_turtlebot_bringup)/config/apriltags2_tags.yaml" />
    <rosparam command="load" file="$(find apriltags2_ros)/config/settings.yaml" />
  </node>
</launch>
